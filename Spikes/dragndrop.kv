# File name: dragndrop.kv
#:kivy 1.7.0
<DragNDrop>:
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        ToolBox:
            id: _tool_box
            drawing_space: _drawing_space
            comic_creator: root
            size_hint: None,None
            width: 100
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        DrawingSpace:
            id: _drawing_space
            tool_box: _tool_box
            size_hint: None,None
            width: root.width - _tool_box.width
            height: root.height
