# File name: statusbar.kv
#:kivy 1.7.0
#:import statusbar statusbar
<StatusBar>:
    msg_label1: _msg_label1
    msg_label2: _msg_label2
    orientation: 'vertical'
    BoxLayout:
        Button:
            id: move_back
            text: '<'
        ToggleButton:
            id: pause
            text: 'Step Through?'
            on_state: root.pausechange(True) if (self.state=='down') else root.pausechange(False)
        Button:
            id: move_forward
            text: '>'
            on_press: root.nextchange()
    Label:
        id: _msg_label1
        text: "Turing Machine Started"
    Label:
        id: _msg_label2
        text: "Tape: "
