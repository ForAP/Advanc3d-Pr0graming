<ToolButton>:
    size_hint: None,None
    size: 48,48
    group: 'tool'
    canvas:
        PushMatrix:
        Translate:
            xy: self.x,self.y
    canvas.after:
        PopMatrix:

<ToolBox@GridLayout>:
    cols: 1
    padding: 1
    # tool_state: _tool_state
    # tool_line: _tool_line
    tool_stickman: _tool_stickman
