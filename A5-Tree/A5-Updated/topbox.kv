#:import topbox topbox
<TopBox>:
    id: home_screen
    #notes_dropdown: notesDropDownID
    orientation: 'vertical'
    padding: 2
    BoxLayout:
        # size_hint: 1, 1
        # pos_hint: {'x': 0.65, 'y': .91}
        Button:
            #id: notesDropDownID
            size_hint: 1, 1
            id: btn_ddID
            text: 'Save TM'
            on_release: root.save_file(*args)

<SavePopup>:
    id: _save_popup
    size_hint: .5, .5
    auto_dismiss: False
    title: 'Please enter the name of the Turing Machine:'
    TextInput:
        id: user_input_save
        multiline: False
        on_text_validate: root.grabInputFromTape(user_input_save.text), root.dismiss()
        on_focus: user_input_save.background_color=[0.8,1,1,1]
