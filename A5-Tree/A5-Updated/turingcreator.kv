# File name: turingcreator.kv
#:kivy 1.7.0
<TuringCreator@Screen>:
    name: 'turingscreen'
    AnchorLayout:
        anchor_y: 'top'
        ActionBar:
            id: _action_bar
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'center'
        ToolBox:
            id: _tool_box
            drawing_space: _drawing_space
            turing_creator: root
            status_bar: _status_bar
            general_options: _general_options
            size_hint: None,None
            width: 48
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        DrawingSpace:
            id: _drawing_space
            turing_creator: root
            status_bar: _status_bar
            general_options: _general_options
            tool_box: _tool_box
            action_bar: _action_bar
            size_hint: None,None
            width: root.width - _tool_box.width
            height: root.height - _general_options.height - _status_bar.height
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        BoxLayout:
            orientation: 'vertical'
            general_options: _general_options
            status_bar: _status_bar
            turing_creator: root
            GeneralOptions:
                id: _general_options
                drawing_space: _drawing_space
                turing_creator: root
                size_hint: 1,None
                height: 48
            StatusBar:
                id: _status_bar
                size_hint: 1,None
                height: 100
