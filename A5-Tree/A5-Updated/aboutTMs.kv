#:import homescreen homescreen

<AboutScreen@Screen>:
    canvas:
        Color:
            rgb: (0.7, 0.1,0.2)
        Rectangle:
            pos: self.pos
            size: self.size
    name: 'about_screen'
    id: "about_screen"

    FloatLayout:
        Button:
            id: home_button
            background_color: [0.8,0.1,0.3,1]
            font_size: 20
            size_hint: 0.2,0.1
            text: "< Back to home"
            on_press: app.root.current = 'homescreen'
            pos_hint: {"left" : 1, "top" : 1}
        Label:
            text: "About Turing Machines"
            font_size: 35
            center_y: home_button.y +20
        Button:
            background_color: [0.8,0.1,0.3,1]
            font_size: 20
            size_hint: 0.2,0.1
            text: "Instructions >"
            on_press: app.root.current = 'instruction_screen'
            pos_hint: {"right" : 1, "top" : 1}

        ScrollView:
            size_hint_y: None
            size_hint_y: 0.88
#            Label:
#                text: str("Some long this\t Ya dawg -------- Thirsty")*30
#                font_size: 50
#                text_size: self.width, None
#                size_hint_y: None
#                height: self.texture_size[1]

            Image:
                source:"TuringMachinesExplaied.png"
                allow_stretch: True
                size_hint_y: None
                height: self.texture_size[1]
                keep_ratio: False


